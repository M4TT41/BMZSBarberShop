<metro:MetroWindow x:Class="BMZSApiHandler.NewItemWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   Title="Adatfelvitel" 
                   Height="600" 
                   Width="450" 
                   ResizeMode="NoResize"
                   WindowStyle="ThreeDBorderWindow"
                   WindowStartupLocation="CenterScreen">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label x:Name="newdata" Content="ÚJ ADAT" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

        <Label x:Name="firstLabel" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="30,0,0,0" FontFamily="Arial"/>
        <Label x:Name="secondLabel" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="30,0,0,0" FontFamily="Arial"/>
        <Label x:Name="thirdLabel" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="30,0,0,0" FontFamily="Arial"/>
        <Label x:Name="fourthLabel" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="30,0,0,0" FontFamily="Arial"/>
        <Label x:Name="fifthLabel" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Margin="30,0,0,0" FontFamily="Arial"/>

        <Button x:Name="finalAdd" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="180" Height="40" Content="Hozzáadás" FontSize="24" Click="finalAdd_Click" FontFamily="Arial"/>
        <Button x:Name="exit" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Width="180" Height="40" Content="KILÉPÉS" FontSize="24" Click="exit_Click" FontFamily="Arial"/>

    </Grid>
</metro:MetroWindow>
